# =====================================================
# Adil GFX Platform - Environment Configuration
# =====================================================
# This file contains ALL environment variables for both
# frontend (React/Vite) and backend (PHP/MySQL)
#
# IMPORTANT: Copy this file to .env and fill in values
# NEVER commit .env to version control!
# =====================================================

# =====================================================
# FRONTEND CONFIGURATION (Vite/React)
# =====================================================

# API Configuration
VITE_API_BASE_URL=https://adilgfx.com/backend
VITE_USE_MOCK_DATA=false

# Site Information
VITE_SITE_NAME=Adil GFX
VITE_SITE_URL=https://adilgfx.com

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=
VITE_FACEBOOK_PIXEL_ID=
VITE_HOTJAR_ID=

# Feature Flags
VITE_ENABLE_ANALYTICS_CONSENT=true
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_WHATSAPP=true

# =====================================================
# BACKEND CONFIGURATION (PHP/MySQL)
# =====================================================

# Database Connection
DB_HOST=localhost
DB_NAME=adilgfx_db
DB_USER=your_hostinger_username
DB_PASS=your_secure_database_password
DB_PORT=3306
DB_CHARSET=utf8mb4

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://adilgfx.com

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://adilgfx.com

# JWT Authentication
# CRITICAL: Generate a strong secret key!
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_MIN_32_CHARS
JWT_EXPIRY=604800

# Security Settings
BCRYPT_COST=12
SESSION_LIFETIME=7200

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/home/username/public_html/backend/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,svg,pdf

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PATH=/home/username/public_html/backend/cache

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Email Configuration (SMTP)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USERNAME=hello@adilgfx.com
SMTP_PASSWORD=your_email_password
SMTP_ENCRYPTION=tls
FROM_EMAIL=hello@adilgfx.com
FROM_NAME=Adil GFX
ADMIN_EMAIL=admin@adilgfx.com

